@model List<GymManagementSystem.Entities.Concrete.Branch>

@{
    ViewBag.Title = "Branches";
}

@section WithoutContainer{
}

<script src="~/js/slidingtext.js"></script>
<link href="~/css/corousel.css" rel="stylesheet"/>
<link href="~/css/slidingtext.css" rel="stylesheet"/>

<div class="sliding-text">
    <marquee behavior="scroll" direction="left">
        <span id="text-sliding">DISCOUNT! Subscribe NOW!</span>
    </marquee>
</div>

<br />

<div class="alert alert-warning" style="text-align: center; font-size: 18px; font-weight: bold;" role="alert">
    Our memberships give access to all branches.
</div>

<br />

<div class="container">
    @for (int i = 0; i < Model.Count; i++)
    {
        @if (i % 4 == 0)
        {
            if (i > 0)
            {
                @:</div>
            }
            @:<div class="row mb-2">
        }
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">@Model[i].Name</strong>
                    <h3 class="mb-0">
                        @Model[i].Address / @Model[i].Country
                    </h3>
                    <div class="mb-1 text-muted">
                        @Model[i].PhoneNumber
                    </div>
                    <p class="card-text mb-auto">
                        @Model[i].Description
                    </p>
                    <br>
                    <a class="btn btn-outline-primary btn-lg m-1" href="/Branch/Detail/@Model[i].Id">Details</a>
                </div>
                <img class="card-img-right flex-auto d-none d-md-block" style="width: 40%;" src="https://media.istockphoto.com/id/122152402/photo/the-outside-of-a-sports-center-building.jpg?s=612x612&w=0&k=20&c=nyTeBGvKoilqzcksIYE79OsYtrIJmCnUzJrei2cZryE=" alt="Best Gym">
            </div>
        </div>
    }
    @if (Model.Count > 0)
    {
        @:</div>
    }
</div>
