@model UserRegisterViewModel
@{
	ViewBag.Title = "Sign Up";
}

<div class="container">
	<div class="py-5 text-center">
		@*<img class="d-block mx-auto mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
	<h2>Sign Up</h2>
	</div>

	<div class="row">
		<div class="col-md-12 order-md-1">
			<h4 class="mb-3">User Informations</h4>
			<form method="post" asp-action="SignUp">
				<div class="row">
					<div class="col-md-6 mb-3">
						<label asp-for="Name">Name</label>
						<input asp-for="Name" class="form-control" value="" required>
						<div class="invalid-feedback">
							Name is required.
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<label asp-for="Surname">Surname</label>
						<input asp-for="Surname" class="form-control" value="" required>
						<div class="invalid-feedback">
							Surname is required.
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<label asp-for="Username">Username</label>
						<input asp-for="Username" class="form-control" value="" required>
						<div class="invalid-feedback">
							Username is required.
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<label asp-for="Email">Email<span class="text-muted"></span></label>
						<input asp-for="Email" class="form-control">
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<label asp-for="Password">Password</label>
						<div class="input-group">
							<input asp-for="Password" class="form-control" required>
							<div class="invalid-feedback" style="width: 100%;">
								Password is required.
							</div>
						</div>
					</div>

					<div class="col-md-6 mb-3">
						<label asp-for="IdentityNumber">Identity Number<span class="text-muted"></span></label>
						<input asp-for="IdentityNumber" class="form-control">
						<div class="invalid-feedback">
							Please enter a valid identity number.
						</div>
					</div>

					<div class="col-md-6 mb-3">
						<label asp-for="Gender">Gender</label>
						<select asp-for="Gender" class="custom-select d-block w-100" required>
							<option value="">Choose</option>
							<option>Male</option>
							<option>Female</option>
						</select>
						<div class="invalid-feedback">
							Please select a valid gender.
						</div>
					</div>

					<div class="col-md-6 mb-3">
						<label asp-for="YearOfBirth">Birth Year<span class="text-muted"></span></label>
						<input asp-for="YearOfBirth" class="form-control">
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<label asp-for="PhoneNumber">Phone Number<span class="text-muted"></span></label>
						<input asp-for="PhoneNumber" class="form-control">
					</div>
					<div class="col-md-6 mb-3">
						<label asp-for="EmergencyPhoneNumber">Emergency Phone Number<span class="text-muted"></span></label>
						<input asp-for="EmergencyPhoneNumber" class="form-control">
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<label asp-for="Address">Address<span class="text-muted"></span></label>
						<input asp-for="Address" class="form-control">
					</div>

					<div class="col-md-6 mb-3">
						<label asp-for="BloodTypeId">Blood Type</label>
						<select asp-for="BloodTypeId" class="custom-select d-block w-100" required>
							<option value="">Blood Type</option>
							<option value="1">A Rh +</option>
							<option value="2">A Rh -</option>
							<option value="4">B Rh +</option>
							<option value="3">B Rh -</option>
							<option value="5">AB Rh +</option>
							<option value="6">AB Rh -</option>
							<option value="7">0 Rh +</option>
							<option value="8">0 Rh -</option>
						</select>
						<div class="invalid-feedback">
							Please select a valid blood type.
						</div>
					</div>
				</div>
				@if(ViewBag.errors != null)
				{
					<div class="alert alert-danger" role="alert">
						@if (ViewBag.errors.Count > 1)
						{
							@foreach (var error in ViewBag.errors)
							{
								@error <br />
							}
						}
						else
						{
							@ViewBag.errors[0]
						}
					</div>
				}
				<div class="d-flex justify-content-center">
					<button class="btn btn-outline-success btn-lg btn-block" style="width: 250px; height: 75px" type="submit">Sign Up</button>
				</div>
			</form>
		</div>
	</div>
</div>